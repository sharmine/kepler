<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<alias name="kepler.management.handler" alias="kepler.management.feeder.transfer" />
	<alias name="kepler.management.handler" alias="kepler.management.feeder.invoker" />
	<alias name="kepler.management.handler" alias="kepler.management.feeder.status" />
	<alias name="kepler.management.handler" alias="kepler.management.roundtrip" />
	<alias name="kepler.management.handler" alias="kepler.management.exported" />
	<alias name="kepler.management.handler" alias="kepler.management.runtime" />

	<bean class="com.kepler.service.exported.ExportedServiceFactory" parent="kepler.service.exproted.abstract">
		<constructor-arg index="1" value="com.kepler.management.search.RoundTrip" />
		<constructor-arg ref="kepler.management.roundtrip" />
	</bean>

	<bean class="com.kepler.service.exported.ExportedServiceFactory" parent="kepler.service.exproted.abstract">
		<constructor-arg index="1" value="com.kepler.management.search.Exported" />
		<constructor-arg ref="kepler.management.exported" />
	</bean>

	<bean class="com.kepler.service.exported.ExportedServiceFactory" parent="kepler.service.exproted.abstract">
		<constructor-arg index="1" value="com.kepler.management.search.Runtime" />
		<constructor-arg ref="kepler.management.runtime" />
	</bean>

	<bean class="com.kepler.service.exported.ExportedServiceFactory" parent="kepler.service.exproted.abstract">
		<constructor-arg index="1" value="com.kepler.management.transfer.Feeder" />
		<constructor-arg ref="kepler.management.feeder.transfer" />
	</bean>
	
	<bean class="com.kepler.service.exported.ExportedServiceFactory" parent="kepler.service.exproted.abstract">
		<constructor-arg index="1" value="com.kepler.management.invoker.Feeder" />
		<constructor-arg ref="kepler.management.feeder.invoker" />
	</bean>
	
	<bean class="com.kepler.service.exported.ExportedServiceFactory" parent="kepler.service.exproted.abstract">
		<constructor-arg index="1" value="com.kepler.management.status.Feeder" />
		<constructor-arg ref="kepler.management.feeder.status" />
	</bean>

	<bean id="kepler.management.handler" class="com.kepler.collector.MongoHandler">
		<constructor-arg ref="kepler.mongo.config.transfer" />
		<constructor-arg ref="kepler.mongo.config.invoker" />
		<constructor-arg ref="kepler.mongo.config.status" />
	</bean>

</beans>