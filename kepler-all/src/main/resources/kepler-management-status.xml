<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<alias name="kepler.management.status.period" alias="kepler.service.exported.status" />

	<bean id="kepler.management.status" class="com.kepler.management.status.impl.ChainedStatus">
		<constructor-arg>
			<util:list>
				<ref bean="kepler.management.status.jmx" />
				<ref bean="kepler.management.status.thread" />
				<ref bean="kepler.management.status.properties" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="kepler.management.status.thread" class="com.kepler.management.status.impl.ThreadStatus">
		<constructor-arg ref="kepler.threads" />
	</bean>

	<bean id="kepler.management.status.jmx" class="com.kepler.management.status.impl.JmxStatus" init-method="init" />

	<bean id="kepler.management.status.properties" class="com.kepler.management.status.impl.PropertiesStatus" init-method="init" />

	<bean id="kepler.management.status.period" class="com.kepler.management.status.impl.StatusPeriod" destroy-method="destory">
		<constructor-arg ref="kepler.threads" />
		<constructor-arg ref="kepler.host.local" />
		<constructor-arg ref="kepler.management.status" />
		<constructor-arg ref="kepler.management.status.feeder" />
	</bean>

	<bean id="kepler.management.status.feeder" class="com.kepler.service.imported.ImportedServiceFactory" parent="kepler.service.imported.abstract">
		<constructor-arg index="0" value="com.kepler.management.status.Feeder" />
	</bean>

</beans>